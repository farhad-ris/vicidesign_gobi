<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >

    <EditText 
        android:id="@+id/userEmail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:inputType="textEmailAddress"
        android:hint="@string/userEmail"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:typeface="sans" />
    
    <EditText
        android:id="@+id/userPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:inputType="textPassword"
        android:hint="@string/userPassword"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:typeface="sans"  />"

    

   <!-- <Button
       android:id="@+id/googlePlus"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerVertical="true"
       android:layout_toLeftOf="@+id/arrowRegister"
       android:background="@null"
       android:drawableLeft="@drawable/ic_google_plus"
       android:gravity="center" /> -->

   <Button
       android:id="@+id/gobiLogin"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="30dp"
       android:layout_alignRight="@+id/userPassword"
       android:layout_below="@id/userPassword"
       android:background="@null"
       android:drawablePadding="5dp"
       android:drawableTop="@drawable/ic_gobi_launcher_thick"
       android:gravity="center"
       android:text="Log In"
       android:textColor="#43C6DB"
       android:textSize="13sp" />

   <Button
       android:id="@+id/arrowRegister"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_toLeftOf="@+id/gobiLogin"
       android:background="@null"
       android:drawableBottom="@drawable/ic_arrow_register"
       android:drawablePadding="5dp"
       android:gravity="center"
       android:text="Register"
       android:textColor="#34282C"
       android:textSize="30sp"
       android:typeface="sans" />
    
</RelativeLayout>