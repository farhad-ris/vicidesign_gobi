<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/organise_row_workspace"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
     >
     
    <TextView android:id="@+id/organise_workspace_Personal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        
		android:layout_weight="0"        
        android:text="Personal"
        android:background="@drawable/border_left"
        android:padding="8dp"
        
        />
     <TextView android:id="@+id/organise_workspace_Work"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        
		android:layout_weight="0"        
        android:text="Work"
        android:background="@drawable/border_left"
        android:padding="8dp"
        
        />
      <TextView android:id="@+id/organise_workspace_Play"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        
		android:layout_weight="0"        
        android:text="Play"
        android:background="@drawable/border_left"
        android:padding="8dp"
        
        />
       <TextView android:id="@+id/organise_workspace_Uni"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        
		android:layout_weight="0"        
        android:text="Uni"
        android:background="@drawable/border_left"
        android:padding="8dp"
        
        />
    

</LinearLayout>