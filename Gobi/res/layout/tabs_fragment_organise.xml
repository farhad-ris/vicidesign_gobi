<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/taskTypes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="10dp"

    android:orientation="horizontal"
    tools:context=".TabsFragments" >
    
    <Button
        android:id="@+id/projectsButtonTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:drawableTop="@drawable/ic_create_project"
        android:drawablePadding="8dp"
        android:padding="0dp"
        android:text="Projects"/>

    <Button
        android:id="@+id/workspaceButtonTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:drawableTop="@drawable/ic_action_workspace"
        android:padding="0dp"
        android:text="Workspaces" />

