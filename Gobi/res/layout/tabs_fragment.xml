<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/taskTypesOrganise"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="10dp"

    android:orientation="horizontal"
    tools:context=".TabsFragments" >

    <Button
        android:id="@+id/tasksButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@null"
        android:drawableTop="@drawable/ic_create_todo"
        android:padding="0dp" />

    <Button
        android:id="@+id/checklistsButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@null"
        android:drawableTop="@drawable/ic_create_checklist"
        android:padding="0dp" />

    <Button
        android:id="@+id/projectsButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@null"
        android:drawableTop="@drawable/ic_create_project"
        android:padding="0dp" />

</LinearLayout>