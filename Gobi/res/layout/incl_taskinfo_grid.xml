<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="3" >

        <Button
            android:id="@+id/task_due_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_column="1"
            android:layout_row="1"
            android:background="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_tab_alarm"
            android:text="Due Date"
            android:textSize="13sp" />

        <Button
            android:id="@+id/task_organise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_column="1"
            android:layout_row="2"
            android:background="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_tab_organise_active"
            android:text="Organise"
            android:textSize="13sp" />

        <Button
            android:id="@+id/task_assign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_column="2"
            android:layout_row="1"
            android:background="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_tab_assign"
            android:text="Assign"
            android:textSize="13sp" />

        <Button
            android:id="@+id/task_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_column="2"
            android:layout_row="2"
            android:background="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_tab_comments_active"
            android:text="Notes"
            android:textSize="13sp" />
    </GridLayout>