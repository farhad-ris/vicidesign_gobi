<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HelpActivity" >
    
    <LinearLayout android:id="@+id/workspaceFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        
    </LinearLayout>
        
        
<!--     <fragment android:id="@+id/fragment_workspaceMenu"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        class="com.example.gobi.WorkspaceMenuFragment"
        /> -->

    <!-- ########################################### -->
    <!-- ##############  TOP MENU  ################# -->
    <!-- ########################################### -->

    <LinearLayout
        android:id="@+id/top_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp" >

        <ImageView
            android:id="@+id/helpIcon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/ic_action_workspace_icon"
            android:scaleType="centerCrop"
             />
        
        <TextView
            android:id="@+id/helpTitle"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:text="@string/help_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30sp"
            android:gravity="center_horizontal"
             />

        <!-- To set background transparent: android:background="@null" -->
        <ImageButton
            android:id="@+id/editHelpButton"
            android:layout_width="45dp"
            android:layout_height="36dp"
            android:background="@null" 
            android:scaleType="centerCrop"
            android:src="@drawable/ic_edit_done" 
            />

    </LinearLayout>
    
	<!-- ########################################### -->
    <!-- #############  HELP CONTENT  ############## -->
    <!-- ########################################### -->
   
   <LinearLayout 
       android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:paddingTop="1dp">
   
   <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Keywords you can use"
            android:textSize="20sp"
            />
    </LinearLayout>
</LinearLayout>